<fieldset id={{this.cGroupId}} class="flex flex-col space-y-3 md:space-y-4 px-1">
    {{#each @question.choices as |choice|}}
    {{#let (contains @value choice.value) as |isChecked|}}
    <label
        class="inline-flex items-center md:px-6 md:py-3 px-4 py-3 text-base md:text-lg font-medium text-gray-700 rounded-3xl {{if isChecked 'text-yellow-accent-dark bg-yellow-accent dark:bg-opacity-80' 'bg-gray-100 dark:bg-indigo-300 dark:bg-opacity-20 dark:text-gray-300'}}">
        <input type="checkbox" name={{this.cGroupId}} value={{choice.value}} checked={{isChecked}} {{on 'change'
            this.onChange}}
            class="w-5 h-5 md:w-6 md:h-6 md:mr-3 mr-3 text-yellow-accent rounded-md  ring-2 dark:bg-gray-400 border-none focus:text-yellow-accent focus:rounded-md focus:ring-yellow-accent-dark focus:border-none {{if isChecked 'ring-yellow-accent-dark dark:bg-yellow-accent dark:bg-opacity-80' 'ring-gray-700'}}" />
        {{choice.label}}
    </label>
    {{/let}}
    {{/each}}
</fieldset>